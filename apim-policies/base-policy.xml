<policies>
    <inbound>
        <base />
        <!-- CORS 설정 -->
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>POST</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
        
        <!-- Rate Limiting -->
        <rate-limit-by-key calls="100" 
                           renewal-period="60" 
                           counter-key="@(context.Request.IpAddress)" />
        
        <!-- Content-Type 검증 -->
        <choose>
            <when condition="@(context.Request.Method == "POST")">
                <set-header name="Content-Type" exists-action="override">
                    <value>application/json</value>
                </set-header>
            </when>
        </choose>
        
        <!-- 요청 로깅 -->
        <trace source="apim-mcp-policy" severity="information">
            <message>@($"MCP Request: {context.Request.Method} {context.Request.Url.Path}")</message>
            <metadata name="timestamp" value="@(DateTime.UtcNow.ToString())" />
            <metadata name="client-ip" value="@(context.Request.IpAddress)" />
        </trace>
    </inbound>
    
    <backend>
        <base />
    </backend>
    
    <outbound>
        <base />
        
        <!-- MCP 프로토콜 헤더 추가 -->
        <set-header name="X-MCP-Protocol-Version" exists-action="override">
            <value>2024-11-05</value>
        </set-header>
        
        <set-header name="X-Powered-By" exists-action="override">
            <value>Azure-APIM-MCP-Gateway</value>
        </set-header>
        
        <!-- 응답 로깅 -->
        <trace source="apim-mcp-policy" severity="information">
            <message>@($"MCP Response: Status {context.Response.StatusCode}")</message>
            <metadata name="response-time" value="@(DateTime.UtcNow.ToString())" />
        </trace>
    </outbound>
    
    <on-error>
        <base />
        
        <!-- 에러 응답 표준화 -->
        <return-response>
            <set-status code="@(context.Response.StatusCode)" reason="@(context.Response.StatusReason)" />
            <set-header name="Content-Type" exists-action="override">
                <value>application/json</value>
            </set-header>
            <set-body>@{
                var error = new JObject();
                error["error"] = new JObject();
                error["error"]["code"] = context.Response.StatusCode.ToString();
                error["error"]["message"] = context.LastError?.Message ?? "Unknown error";
                error["error"]["timestamp"] = DateTime.UtcNow.ToString("o");
                return error.ToString();
            }</set-body>
        </return-response>
    </on-error>
</policies>
